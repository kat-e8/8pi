extends layout
include _includes/sharedHTMLfunctions

block content
    .row.banner
        .col-12
            h1= pageHeader.title
                small &nbsp;#{pageHeader.strapline}
    .row
        .col-12.col-md-8
            each tag in tags
                .card
                    .card-block
                        h4
                            a(href="/tags/tag")= tag.name
                            small &nbsp;
                                +outputRating(tag.value)
                            span.badge.badge-pill.badge-default.float-right= tag.quality
                        p.address= tag.description
                        p.facilities
                            each option in tag.options
                                span.badge.badge-warning= option
        .col-12.col-md-4
            p.lead= sidebar