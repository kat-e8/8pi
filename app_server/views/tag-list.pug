extends layout
include _includes/sharedHTMLfunctions

block content
    .row.banner
        .col-12
            h1= pageHeader.title
                small &nbsp;#{pageHeader.strapline}
    .row
        .col-12.col-md-8
            form(action="/refresh", method="post", role="form")
                .form-group.row
                    label.col-10.col-sm-2.left-edge.col-form-label(for="depth") Tag Path
                    .col-12.col-sm-10
                        //- input#name.form-control(name="depth")
                        select#propertyType.select.form-control.input-lg(name="depth")
                            each fullTagPath in fullTagPaths
                                option(value=`${fullTagPath}`, selected= true)=fullTagPath
                .form-group.row
                    label.col-10.col-sm-2.left-edge.col-form-label(for="duration") Duration
                    .col-12.col-sm-10
                        //- input#name.form-control(name="depth")
                        input#propertyType.select.form-control.input-lg(name="duration")
                button.btn.btn-primary.float-right(href=`/refresh`) Absorb
    .row.margin-top
        .col-12.col-md-8
            a.btn.btn-primary.float-right.button(href=`/add-tag`) Add Tag

    .row
        .col-12.col-md-8
            .error= message
            each tag in tags.reverse()
                .card
                    .card-block
                        h4
                            a(href=`/tags/${tag._id}`)= tag.name
                            small &nbsp;
                            a.btn.btn-primary.float-right.button(href=`/tags/${tag._id}/delete`) Delete
                        p.address= tag.value
                        p.address= tag.quality
                        
        .col-12.col-md-4
            p.lead= sidebar.context