extends layout

block content
  .row.banner
    .col-12
      h1 Add Tag to Canary Dataset

  .row
    .col-12.col-md-8
      form(action="/tags/tag", method="get", role="form")
        .form-group.row
          label.col-10.col-sm-2.col-form-label(for="name") Name
          .col-12.col-sm-10
            input#name.form-control(name="name")
        .form-group.row
          label.col-10.col-sm-2.col-form-label(for="quality") Quality
          .col-12.col-sm-10
            input#name.form-control(name="quality")
        .form-group.row
          label.col-10.col-sm-2.col-form-label(for="value") Value
          .col-12.col-sm-2
            select#rating.form-control.input-sm(name="value")
              option 5
              option 4
              option 3
              option 2
              option 1
        .form-group.row
          label.col-10.col-sm-2.col-form-label(for="add") Description
          .col-12.col-sm-10
            textarea#review.form-control(name="add", rows="5")
        button.btn.btn-primary.float-right Add Tag
    .col-12.col-md-4