extends layout

include _includes/sharedHTMLfunctions

block content
  .row.banner
    .col-12
      h1 #{pageHeader.title} | #{pageHeader.strapline}
  .row
    .col-12.col-lg-9
      .row
        .col-12.col-md-6
          p.rating
            +outputRating(tag.name)
          p= tag.description
        .col-12.col-md-6.location-map
          .card.card-primary
            .card-block
              h2.card-title Tag Location
              img.img-fluid.rounded(src=`http://maps.googleapis.com/maps/api/staticmap?center=-26.2309,28.0583&zoom=17&size=400x350&sensor=false&markers=-26.2309,28.0583&scale=2`)
      .row
        .col-12
          .card.card-primary.review-card
            .card-block
              h2.card-title TVQs
              each tv in tag.tvs
                .row.review
                  .col-12.no-gutters.review-header
                    span.reviewAuthor.push #{tv.v}
                    small.reviewTimestamp
                      =tv.t

                .col-12
                    //- p !{(annotation.comment).replace(/\n/g, '<br/>')}
          .card.card-primary.review-card
            .card-block
              a.btn.btn-primary.float-right(href=`/tags/${tag._id}/annotation/new`) Add Tag Note
              h2.card-title Tag annotations
              each annotation in tag.annotations
                .row.review
                  .col-12.no-gutters.review-header
                    span.rating.push
                      +outputRating(tag.value)
                    span.reviewAuthor.push #{annotation.author}
                    small.reviewTimestamp
                      +formatDate(annotation.createdOn)
                  .col-12
                    p !{(annotation.comment).replace(/\n/g, '<br/>')}
    .col-12.col-lg-3
      p.lead #{tag.name} #{sidebar.context}
      p= sidebar.callToAction